@model nab.Models.UserEmail

@{
    ViewData["Title"] = "Contact";
    ViewData["Page class"] = "page-contact";
}

<h1>@ViewData["Title"]</h1>

@if ((bool)ViewData["success"] == false)
{
    <p>If you wish to get in touch regarding complaints (surely not), praise, previous work, current work or even future work please do so here.</p>

    <form asp-controller="Contact" asp-action="Email" method="post" class="form-main" role="form">
        <p class="advice-form-fields">Required fields</p>
        <fieldset>
            <legend>Drop me a line</legend>
            <dl>
                <dt>
                    <label asp-for="SenderName" class="required">Your name</label>
                </dt>
                <dd>
                    <input asp-for="SenderName" type="text" />
                    <span asp-validation-for="SenderName"></span>
                </dd>
                <dt>
                    <label asp-for="SenderEmailAddress" class="required">Your e-mail</label>
                </dt>
                <dd>
                    <input asp-for="SenderEmailAddress" type="text" />
                    <span asp-validation-for="SenderEmailAddress"></span>
                </dd>
                <dt>
                    <label asp-for="EmailSubject" class="required">Subject</label>
                </dt>
                <dd>
                    <input asp-for="EmailSubject" type="text" />
                    <span asp-validation-for="EmailSubject"></span>
                </dd>
                <dt>
                    <label asp-for="EmailMessage" class="required">Message</label>
                </dt>
                <dd>
                    <textarea asp-for="EmailMessage" rows="6"></textarea>
                    <span asp-validation-for="EmailMessage"></span>
                </dd>
            </dl>
        </fieldset>
        <input type="submit" value="Send" />
    </form>
}
else
{
    <p>Thanks</p>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
